QWidget {
    color: white;
    background-color: black;
}
QScrollBar:vertical {
    border: 2px solid #1E3A8A;
    background: #f0f0f0;
    width: 15px;
    margin: 22px 0 22px 0;
    border-radius: 7px;
}
QScrollBar::handle:vertical {
    background: #1E3A8A;
    min-height: 20px;
    border-radius: 7px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
    border: none;
    background: none;
}